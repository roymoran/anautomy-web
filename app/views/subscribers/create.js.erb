<% if @subscriber.save %>
swal({   
	title: "Success",   
	text: "You're on our list. Expect an email soon.",   
	type: "success",   
	confirmButtonText: "Cool" });
$('#subscriber_form').trigger("reset");
<% else %>
swal({   
	title: "Error",   
	text: "The email has already been submitted or is invalid.",   
	type: "error",   
	confirmButtonText: "Okay" });
<%end%>