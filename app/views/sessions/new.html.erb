<% provide(:title, "Log in") %>
<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
  	<h2 class="text-center main-headline">Log in</h2>
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, class: 'hidden' %>
      <%= f.email_field :email, class: 'login-form', :placeholder => 'Email' %>

      <%= f.label :password, class: 'hidden' %>
      <%= f.password_field :password, class: 'login-form', :placeholder => 'Password' %>
      <%= f.submit "Log in", class: "btn btn-auth-form" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    <p><%= link_to "Forgot password?", new_password_reset_path %></p>
  </div>
</div>