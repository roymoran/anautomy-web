<% provide(:title, "Repair Submission") %>
<div class="container-fluid">
<!--Update jQuery to include local copies of jquery-1.9.1.mis.js and jquery.easing.min.js and update form inputs with rails form helpers (form for) and update copy and update color/font-->
<div class="row" style="font-family: montserrat, arial, verdana">
    <!-- multistep form -->
<p class="text-center"> Repair submission for <%= @shop.shop_name%> on <%= @shop.shop_address%></p>
<div class = "col-lg-12">

<%= form_for @repairSubmission, :html => {:id => 'msform', :class => ''}, remote: true do |f|%>
  <!-- progressbar -->
  <ul id="progressbar">
    <li class="active" style="color:#5A5A5A;">Your Info</li>
    <li style="color:#5A5A5A;">Car Details</li>
    <li style="color:#5A5A5A;">Repair Details</li>
  </ul>
  <!-- fieldsets -->
  <fieldset>
    <h2 class="fs-title">Your Info</h2>
    <h3 class="fs-subtitle"></h3>
    <%= f.email_field :email, class: '', :placeholder => "Email"%>
    <input type="button" name="next" class="next action-button" value="Next" />
  </fieldset>
  <fieldset>
    <h2 class="fs-title">What kind of car?</h2>
    <h3 class="fs-subtitle"></h3>
    <%= f.select(:vehicle_year, options_for_select([*(Time.zone.now.year-80)..(Time.zone.now.year + 1)].reverse), {prompt: "Select Year"}, {class: "select_submission_form"}) %>
    <%= f.collection_select(:car_make, CarMake.all, :id, :name, {prompt: "Select Make"}, {class: "select_submission_form", id: "car_make_select"}) %>
    <%= f.grouped_collection_select(:car_model, CarMake.all, :car_models, :name, :id, :name, {prompt: "Select Model"}, {class: "select_submission_form", id: "car_model_select"}) %>
    <!--
    <%= f.text_field :vehicle_trim, class: '', :placeholder => "TRIM*"%>
    <%= f.text_field :vehicle_mileage, class: '', :placeholder => "MILEAGE"%>
    -->
    <input type="button" name="previous" class="previous action-button" value="Previous" />
    <input type="button" name="next" class="next action-button" value="Next" />
  </fieldset>
  <fieldset>
    <h2 class="fs-title">What repair?</h2>
    <h3 class="fs-subtitle"></h3>
    <select class="select_submission_form" data-toggle="modal" data-target="#myModal">
      <option class="repair_select_option" selected disabled hidden></option>
     </select>

     <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Select Repair</h4>
          </div>
          <div class="modal-body">
            <% @repair_category.each do |category| %>
            <h4 class="text-left"><u><%= category.name%></u></h4>
            <div class="row">
              <% category.repair_names.each do |repair| %>
              <div class="col-sm-4">
                <p>
                  <a class="repair-name-text" href="#" data-cat="<%=category.name%>" data-dismiss="modal">
                    <%= repair.name %>
                  </a>
                </p>
              </div>
            <% end %>
          </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <%= f.text_field :parts_cost, class: 'parts_cost_field', :placeholder => "PARTS COST*"%>
    <%= f.text_field :labor_cost, class: 'labor_cost_field', :placeholder => "LABOR COST*"%>
    <%= f.text_field :total_cost, class: 'total_cost_field', :placeholder => "TOTAL COST*"%>

    <%= f.date_select :repair_date, {order: [:month,:year], start_year: Time.zone.now.year, end_year: (Time.zone.now.year-100), prompt: { day: 'Day', month: 'Month', year: "Year" }}, {class: 'select_date_submission_form col-sm-6'}  %>

    <h3 class="fs-subtitle fs-subtitle-rate">Rate your experience at <%= @shop.shop_name%></h3>

    <div class="row cost-rating-row">
      <div class="col-xs-3 text-left">
        Cost:
      </div>
      <div class="col-xs-3">
        <%= radio_button_tag(:cost_rating, 3, false, {class: "with-fa-smile with-fa"}) %>
        <label for="cost_rating_3" style="
        margin-top:-8px;"></label>
      </div>
      <div class="col-xs-3">
        <%= radio_button_tag(:cost_rating, 2, false, {class: "with-fa-meh with-fa"}) %>
        <label for="cost_rating_2" style="
        margin-top:-8px;"></label>
      </div>
      <div class="col-xs-3">
        <%= radio_button_tag(:cost_rating, 1, false, {class: "with-fa-frown with-fa"}) %>
        <label for="cost_rating_1" style="
        margin-top:-8px;"></label>
      </div>
    </div>

    <div class="row quality-rating-row">
      <div class="col-xs-3 text-left">
        Quality:
      </div>
      <div class="col-xs-3">
        <%= radio_button_tag(:quality_rating, 3, false, {class: "with-fa-smile with-fa"}) %>
        <label for="quality_rating_3" style="
        margin-top:-8px;"></label>
      </div>
      <div class="col-xs-3">
        <%= radio_button_tag(:quality_rating, 2, false, {class: "with-fa-meh with-fa"}) %>
        <label for="quality_rating_2" style="
        margin-top:-8px;"></label>
      </div>
      <div class="col-xs-3">
        <%= radio_button_tag(:quality_rating, 1, false, {class: "with-fa-frown with-fa"}) %>
        <label for="quality_rating_1" style="
        margin-top:-8px;"></label>
      </div>
    </div>

    <div class="row quickness-rating-row">
      <div class="col-xs-3 text-left">
        Quickness:
      </div>
      <div class="col-xs-3"`>
        <%= radio_button_tag(:quickness_rating, 3, false, {class: "with-fa-smile with-fa"}) %>
        <label for="quickness_rating_3" style="
        margin-top:-8px;"></label>
      </div>
      <div class="col-xs-3">
        <%= radio_button_tag(:quickness_rating, 2, false, {class: "with-fa-meh with-fa"}) %>
        <label for="quickness_rating_2" style="
        margin-top:-8px;"></label>
      </div>
      <div class="col-xs-3">
        <%= radio_button_tag(:quickness_rating, 1, false, {class: "with-fa-frown with-fa"}) %>
        <label for="quickness_rating_1" style="
        margin-top:-8px;"></label>
      </div>
    </div>
    <!--
    <%= f.text_area :review, class: '',:rows => 3, :cols => 71,  :placeholder => "POVIDE A SHORT DESCRIPTION OF YOUR EXPERIENCE (OPTIONAL)"%>
  -->
    <%= hidden_field_tag :shop_id, @repairSubmission.shop_id %>
    <%= f.hidden_field :shop_id, :value => @repairSubmission.shop_id %>
    <%= f.hidden_field :repair_category, :value => 1 %>
    <%= f.hidden_field :repair_name, :value => 2 %>

    <input type="button" name="previous" class="previous action-button" value="Previous" />
    <%= f.submit "Submit", {class: "action-button"}%>
  </fieldset>
<% end %>
  
</div>
</div>
</div>
<!-- jQuery -->
<script src="http://thecodeplayer.com/uploads/js/jquery-1.9.1.min.js" type="text/javascript"></script>
<!-- jQuery easing plugin -->
<script src="http://thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>

