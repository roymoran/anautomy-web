<% provide(:title, "Repair Submission") %>
<div class="container-fluid">

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <p> Repair submission for <%= @shop.shop_name%> on <%= @shop.shop_address%></p>
      <%= form_for(@repairSubmission, :html => {:class => ''}, remote: true) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label :vehicle_year %>
      <!-- Top of range is current year-->
      <%= f.number_field :vehicle_year, class: 'form-control'%>

      <%= f.label :vehicle_make %>
      <%= f.text_field :vehicle_make, class: 'form-control' %>

      <%= f.label :vehicle_model %>
      <%= f.text_field :vehicle_model, class: 'form-control' %>

      <%= f.label :vehicle_trim %>
      <%= f.text_field :vehicle_trim, class: 'form-control' %>

      <%= f.label :vehicle_mileage %>
      <%= f.text_field :vehicle_mileage, class: 'form-control' %>

      <%= f.label :repair_description %>
      <%= f.text_field :repair_description, class: 'form-control' %>

      <%= f.label :parts_cost %>
      <%= f.text_field :parts_cost, class: 'form-control' %>

      <%= f.label :labor_cost %>
      <%= f.text_field :labor_cost, class: 'form-control' %>

      <%= f.label :total_cost %>
      <%= f.text_field :total_cost, class: 'form-control' %>

      <%= f.label :review %>
      <%= f.text_area :review, class: 'form-control' %>
      <br>
      <%= f.submit "Submit Repair", class: "btn btn-custom btn-block" %>
      <br>
    <% end %>
  </div>

</div>







<div class="row">

    <!-- multistep form -->
<form id="msform">
  <!-- progressbar -->
  <ul id="progressbar">
    <li class="active">Account Setup</li>
    <li>Social Profiles</li>
    <li>Personal Details</li>
  </ul>
  <!-- fieldsets -->
  <fieldset>
    <h2 class="fs-title">Create your account</h2>
    <h3 class="fs-subtitle">This is step 1</h3>
    <input type="text" name="email" placeholder="Email" />
    <input type="password" name="pass" placeholder="Password" />
    <input type="password" name="cpass" placeholder="Confirm Password" />
    <input type="button" name="next" class="next action-button" value="Next" />
  </fieldset>
  <fieldset>
    <h2 class="fs-title">Social Profiles</h2>
    <h3 class="fs-subtitle">Your presence on the social network</h3>
    <input type="text" name="twitter" placeholder="Twitter" />
    <input type="text" name="facebook" placeholder="Facebook" />
    <input type="text" name="gplus" placeholder="Google Plus" />
    <input type="button" name="previous" class="previous action-button" value="Previous" />
    <input type="button" name="next" class="next action-button" value="Next" />
  </fieldset>
  <fieldset>
    <h2 class="fs-title">Personal Details</h2>
    <h3 class="fs-subtitle">We will never sell it</h3>
    <input type="text" name="fname" placeholder="First Name" />
    <input type="text" name="lname" placeholder="Last Name" />
    <input type="text" name="phone" placeholder="Phone" />
    <textarea name="address" placeholder="Address"></textarea>
    <input type="button" name="previous" class="previous action-button" value="Previous" />
    <input type="submit" name="submit" class="submit action-button" value="Submit" />
  </fieldset>
</form>
  

</div>
</div>

