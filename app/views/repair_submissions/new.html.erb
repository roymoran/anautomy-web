<% provide(:title, "Repair Submission") %>
<div class="container-fluid">
<!--Update jQuery to include local copies of jquery-1.9.1.mis.js and jquery.easing.min.js and update form inputs with rails form helpers (form for) and update copy and update color/font-->
<div class="row" style="font-family: montserrat, arial, verdana">
    <!-- multistep form -->
<p class="text-center"> Repair submission for <%= @shop.shop_name%> on <%= @shop.shop_address%></p>
<div class = "col-lg-12">

<%= form_for @repairSubmission, :html => {:id => 'msform', :class => ''}, remote: true do |f|%>
  <!-- progressbar -->
  <ul id="progressbar">
    <li class="active" style="color:#5A5A5A;">Your Info</li>
    <li style="color:#5A5A5A;">Car Details</li>
    <li style="color:#5A5A5A;">Repair Details</li>
  </ul>
  <!-- fieldsets -->
  <fieldset>
    <h2 class="fs-title">Your Info</h2>
    <h3 class="fs-subtitle"></h3>
    <%= f.email_field :email, class: '', :placeholder => "Email"%>
    <input type="button" name="next" class="next action-button" value="Next" />
  </fieldset>
  <fieldset>
    <h2 class="fs-title">What kind of car?</h2>
    <h3 class="fs-subtitle"></h3>

    <%= f.select(:vehicle_year, options_for_select((Time.zone.now.year - 100)..(Time.zone.now.year), :selected => (Time.zone.now.year)), {}, {class: "select_submission_form"}) %>
    <%= f.text_field :vehicle_make, class: '', :placeholder => "MAKE*"%>
    <%= f.text_field :vehicle_model, class: '', :placeholder => "MODEL*"%>
    <%= f.text_field :vehicle_trim, class: '', :placeholder => "TRIM*"%>
    <%= f.text_field :vehicle_mileage, class: '', :placeholder => "MILEAGE"%>

    <input type="button" name="previous" class="previous action-button" value="Previous" />
    <input type="button" name="next" class="next action-button" value="Next" />
  </fieldset>
  <fieldset>
    <h2 class="fs-title">What repair?</h2>
    <h3 class="fs-subtitle"></h3>
    <%= f.text_field :repair_description, class: '', :placeholder => 'REPAIR NAME*'%>
    <%= f.text_field :parts_cost, class: '', :placeholder => "PARTS COST*"%>
    <%= f.text_field :labor_cost, class: '', :placeholder => "LABOR COST*"%>
    <%= f.text_field :total_cost, class: '', :placeholder => "TOTAL COST*"%>
    <%= f.text_area :review, class: '',:rows => 3, :cols => 71,  :placeholder => "POVIDE A SHORT DESCRIPTION OF YOUR EXPERIENCE (OPTIONAL)"%>
    <input type="button" name="previous" class="previous action-button" value="Previous" />
    <%= f.submit "Submit", class: "action-button" %>

  </fieldset>
<% end %>
  
</div>
</div>
</div>
<!-- jQuery -->
<script src="http://thecodeplayer.com/uploads/js/jquery-1.9.1.min.js" type="text/javascript"></script>
<!-- jQuery easing plugin -->
<script src="http://thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>

