<div class="modal fade" id="signup-modal" tabindex="-1" role="dialog" aria-labelledby="signupModal">
  <div class="modal-dialog" role="document">

    <div class = "container-fluid">
      <div class = "row">
        <div class = "col-sm-10 col-sm-offset-1">

    <div class="modal-content" style="padding-top:10px;">
      <div class="modal-body">
      <%= form_for(@car_owner, url: signup_path) do |f| %>
      <%= f.label :name, class: 'hidden' %>
      <%= f.text_field :name, class: 'signup-form mp-signup-modal-name', :placeholder => 'Name' %>
      
      <%= f.label :email, class: 'hidden' %>
      <%= f.email_field :email, class: 'signup-form mp-signup-modal-email', :placeholder => 'Email Address' %>
      
      <%= f.label :password, class: 'hidden' %>
      <%= f.password_field :password, class: 'signup-form', :placeholder => 'Password' %>
      
      <%= f.label :password_confirmation, "Confirmation", class: 'hidden' %>
      <%= f.password_field :password_confirmation, class: 'signup-form', :placeholder => 'Confirm Password' %>
      
      <%= f.submit "Continue", class: "btn btn-auth-form mp-signup-modal-submitted" %>
    <% end %>

    <div class = "row">
      <div class = "col-sm-12">
        By signing up, I agree to Innvoyâ€™s <%= link_to "Terms of Service", tos_path %>.
      </div>
     </div>

      </div>
    </div>

    </div>
  </div>
  </div>

  </div>
</div>
<% end %>

